<UserControl x:Class="Mobilek.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label Content="LOGIN AS:" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="80"/>
        <Button Content="User"  Margin="30,2" VerticalAlignment="Center" HorizontalAlignment="Left"
                        Command="{Binding Path=ToCustomerLogin}" IsDefault="True" Width="100" />
        <Button Content="Admin"  Margin="30, 2" VerticalAlignment="Center" HorizontalAlignment="Right" Width="100"
                        Command="{Binding Path=ToWorkerLogin}"/>
    </Grid>
</UserControl>
